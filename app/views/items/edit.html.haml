= form_for @item, url: admins_items_path, method: 'post', html: {multipart: true} do |f|
  = f.label :name
  = f.text_field :name

  = f.label :price
  = f.text_field :price

  = f.label :description
  = f.text_field :description

  = f.label :image
  = f.file_field :image

  = f.submit 'Edit item'

= link_to "Delete", @item, data: { confirm: 'Are you sure?' }, method: :delete, id: "delete"